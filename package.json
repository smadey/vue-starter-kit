{
  "name": "vue-starter-kit",
  "version": "0.0.1",
  "author": "SmadeyZhang",
  "license": "MIT",
  "description": "Vue Seed Project",
  "scripts": {
    "dev": "nodemon --watch src/server --exec babel-node src/server/index",
    "build": "npm run build:server && npm run build:client",
    "build:server": "cross-env NODE_ENV=production babel src/server -d dist/server && npm run uglify:server",
    "build:client": "cross-env NODE_ENV=production webpack --config build/webpack.config.js --progress --hide-modules",
    "uglify:server": "uglifyjs dist/server/index.js -o dist/server/index.js -c -b",
    "start": "cross-env NODE_ENV=production && node dist/server/index"
  },
  "dependencies": {
    "body-parser": "^1.15.1",
    "cookie-parser": "^1.4.1",
    "cross-env": "^1.0.7",
    "ejs": "^2.4.1",
    "express": "^4.13.4",
    "promise": "^7.1.1",
    "swiper": "^3.3.1",
    "vue": "^1.0.24",
    "wechat-api": "^1.27.1",
    "whatwg-fetch": "^1.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.8.0",
    "babel-core": "^6.8.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-node-env-inline": "^6.8.0",
    "babel-plugin-transform-runtime": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "css-loader": "^0.23.1",
    "eslint": "^2.9.0",
    "eslint-config-airbnb-base": "^3.0.1",
    "eslint-friendly-formatter": "^2.0.4",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-import": "^1.7.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "handlebars": "^4.0.5",
    "handlebars-loader": "^1.3.0",
    "html-webpack-plugin": "^2.21.0",
    "node-sass": "^3.7.0",
    "nodemon": "^1.9.2",
    "postcss-loader": "^0.9.1",
    "precss": "^1.4.0",
    "sass-loader": "^3.2.0",
    "uglify-js": "^2.6.4",
    "url-loader": "^0.5.7",
    "vue-hot-reload-api": "^1.3.2",
    "vue-html-loader": "^1.2.2",
    "vue-loader": "^8.3.1",
    "vue-style-loader": "^1.0.0",
    "webpack": "^1.13.0",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-hot-middleware": "^2.10.0"
  }
}
